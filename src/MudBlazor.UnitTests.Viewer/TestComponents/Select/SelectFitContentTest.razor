<MudSelect @bind-Value="_selectedState" Label="Select a State"  FullWidth="FullWidth" FitContent="FitContent" Variant="Variant.Outlined" Clearable>
    @foreach (var state in _states)
    {
        <MudSelectItem Value="@state">@state</MudSelectItem>
    }
</MudSelect>

<MudSelect @bind-Value="_selectedState" Label="Select a State" FullWidth="FullWidth" FitContent="FitContent" Variant="Variant.Outlined" Clearable Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.LocationOn">
    @foreach (var state in _states)
    {
        <MudSelectItem Value="@state">@state</MudSelectItem>
    }
</MudSelect>

<MudStack Class="align-center mud-width-full" Row>
    <MudSwitch @bind-Value="FullWidth" Label="Full Width" Color="Color.Primary" />
    <MudSwitch @bind-Value="FitContent" Label="Fit Content" Color="Color.Primary" />
</MudStack>

