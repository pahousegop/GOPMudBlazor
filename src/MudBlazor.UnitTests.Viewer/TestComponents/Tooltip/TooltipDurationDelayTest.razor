<MudTooltip Text="Test content..." Duration="@Duration" Delay="@Delay" ShowOnHover="@ShowOnHover">
    <MudButton id="my-tooltip-button">Button With Tooltip</MudButton>
</MudTooltip>

@code {
    public static string __description__ = "Used to test Tooltip Duration and Delay";

    [Parameter]
    public double Duration { get; set; } = 1000;

    [Parameter]
    public double Delay { get; set; } = 500;

    [Parameter]
    public bool ShowOnHover { get; set; } = true;
}

