@namespace MudBlazor
@inherits MudComponentBase

<span class="@ClassName"
      style="@Style"
      @onpointerover="HandlePointerOverAsync"
      @onpointerout="HandlePointerOutAsync"
      @onclick="HandleClickAsync">
    <input @attributes="UserAttributes"
           class="mud-rating-input"
           type="radio"
           tabindex="-1"
           value="@ItemValue"
           name="@Rating?.Name"
           disabled="@Disabled"
           checked="@Checked"
           aria-readonly="@(ReadOnly.ToString().ToLower())" />

    <MudIcon Icon="@ItemIcon" Color="@ItemColor" Size="@Size" />
</span>
