@namespace MudBlazor
@typeparam T
@inherits MudComponentBase
@implements IDisposable

<span @onclick="ToggleSortDirection" class="@Classname" style="@Style" @attributes="@UserAttributes">
    @if (!AppendIcon)
    {
        @ChildContent
    }
    @if (Enabled)
    {
        <MudIcon Icon="@SortIcon" Class="@SortIconClassname" />
    }
    @if (AppendIcon)
    {
        @ChildContent
    }
</span>
